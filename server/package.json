{
  "name": "glsl-playground-server",
  "scripts": {
    "format": "biome format . --write",
    "check": "npm run check:lint && npm run check:format && npm run check:types",
    "check:lint": "biome check .",
    "check:format": "biome ci .",
    "check:types": "tsc",
    "test": "NODE_ENV=test mocha --require tsx --exit  '**/*.test.ts'",
    "db:setup": "tsx database-setup.ts",
    "start": "tsx --watch index.ts",
    "build": "npm run build:code && npm run build:assets",
    "build:code": "esbuild --bundle --minify --sourcemap --platform=node --external:pg --external:bcrypt --outfile=../dist/server.cjs index.ts",
    "build:assets": "cp -r sql ../dist"
  },
  "dependencies": {
    "bcrypt": "5.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.2",
    "email-validator": "^2.0.4",
    "express": "^4.18.2",
    "express-static-gzip": "^2.1.7",
    "gl-matrix": "^3.4.3",
    "jsonwebtoken": "^9.0.2",
    "obj-file-parser": "^0.5.3",
    "pg": "8.8.0"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/chai": "^4.3.11",
    "@types/cookie-parser": "^1.4.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mocha": "^10.0.6",
    "@types/obj-file-parser": "^0.5.0",
    "@types/pg": "8.6.5",
    "@types/supertest": "^6.0.2",
    "chai": "^5.0.3",
    "esbuild": "^0.20.0",
    "identity-obj-proxy": "3.0.0",
    "mocha": "^10.2.0",
    "supertest": "6.3.1",
    "tsx": "^4.7.0",
    "typescript": "5.3.3"
  }
}
